<UserControl x:Class="KobiPOS.Views.ProductManagementView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KobiPOS.Views"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="1000"
             Background="{StaticResource BackgroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource HeaderBrush}" Padding="20">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" 
                           Text="ÃœrÃ¼n YÃ¶netimi" 
                           FontSize="24" 
                           FontWeight="Bold" 
                           Foreground="White"
                           VerticalAlignment="Center"/>

                <Button Grid.Column="1" 
                        Content="Yeni ÃœrÃ¼n Ekle" 
                        Style="{StaticResource SuccessButton}"
                        Command="{Binding AddProductCommand}"
                        Padding="20,10"/>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Category Filters -->
            <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
                <ItemsControl ItemsSource="{Binding Categories}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Content="{Binding CategoryName}"
                                    Command="{Binding DataContext.FilterCategoryCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                    CommandParameter="{Binding}"
                                    Style="{StaticResource CategoryFilterButton}"
                                    Margin="5,0">
                                <Button.Triggers>
                                    <EventTrigger RoutedEvent="Button.Loaded">
                                        <BeginStoryboard>
                                            <Storyboard>
                                                <ColorAnimation Storyboard.TargetProperty="(Button.Background).(SolidColorBrush.Color)" 
                                                                Duration="0:0:0.2"/>
                                            </Storyboard>
                                        </BeginStoryboard>
                                    </EventTrigger>
                                </Button.Triggers>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </StackPanel>

            <!-- Product Grid (Card View) -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                <ItemsControl ItemsSource="{Binding FilteredProducts}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel Orientation="Horizontal"/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Width="220" Height="320" 
                                    Background="White" 
                                    BorderBrush="#E0E0E0" 
                                    BorderThickness="1" 
                                    CornerRadius="8" 
                                    Margin="10"
                                    Padding="15"
                                    Effect="{StaticResource CardShadow}">
                                <StackPanel>
                                    <!-- Product Image -->
                                    <Border Width="180" Height="180" 
                                            Background="#F5F5F5" 
                                            CornerRadius="4"
                                            Margin="0,0,0,10">
                                        <Image Source="{Binding ImagePath, Converter={StaticResource PathToImageSourceConverter}, TargetNullValue={StaticResource DefaultProductImage}, FallbackValue={StaticResource DefaultProductImage}}"
                                               Stretch="UniformToFill"/>
                                    </Border>
                                    
                                    <!-- Product Name -->
                                    <TextBlock Text="{Binding ProductName}" 
                                               FontSize="16" 
                                               FontWeight="SemiBold" 
                                               TextTrimming="CharacterEllipsis"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,5"/>
                                    
                                    <!-- Price -->
                                    <TextBlock Text="{Binding Price, StringFormat='{}{0:C2}'}" 
                                               FontSize="18" 
                                               FontWeight="Bold" 
                                               Foreground="{StaticResource PrimaryBrush}"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,5"/>
                                    
                                    <!-- Stock Info -->
                                    <TextBlock FontSize="12" 
                                               Foreground="#666"
                                               HorizontalAlignment="Center"
                                               Margin="0,0,0,10">
                                        <Run Text="Stok: "/>
                                        <Run Text="{Binding CurrentStock, Mode=OneWay}"/>
                                    </TextBlock>
                                    
                                    <!-- Buttons -->
                                    <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                        <Button Content="âœï¸ DÃ¼zenle" 
                                                Command="{Binding DataContext.EditProductCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource WarningButton}"
                                                FontSize="11"
                                                Padding="8,4"
                                                Margin="0,0,5,0"/>
                                        
                                        <Button Content="ðŸ—‘ï¸ Sil" 
                                                Command="{Binding DataContext.DeleteProductCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                CommandParameter="{Binding}"
                                                Style="{StaticResource DangerButton}"
                                                FontSize="11"
                                                Padding="8,4"/>
                                    </StackPanel>
                                </StackPanel>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Grid>

        <!-- Edit Dialog -->
        <Border Grid.Row="0" Grid.RowSpan="2"
                Background="#80000000"
                Visibility="{Binding IsEditMode, Converter={StaticResource BoolToVisibilityConverter}}"
                MouseDown="DialogBackground_MouseDown">
            <Border Width="500" 
                    Background="White" 
                    CornerRadius="8"
                    Padding="30"
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Effect="{StaticResource CardShadow}">
                <Border.InputBindings>
                    <MouseBinding MouseAction="LeftClick" Command="{x:Null}"/>
                </Border.InputBindings>

                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Dialog Header -->
                    <TextBlock Grid.Row="0" 
                               FontSize="20" 
                               FontWeight="Bold"
                               Margin="0,0,0,20"
                               Foreground="#333333">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <Setter Property="Text" Value="ÃœrÃ¼n Ekle"/>
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding EditingProduct.ID, Converter={StaticResource IsGreaterThanZeroConverter}}" Value="True">
                                        <Setter Property="Text" Value="ÃœrÃ¼n DÃ¼zenle"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>

                    <!-- Form Fields -->
                    <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" MaxHeight="400">
                        <StackPanel>
                            <!-- Product Name -->
                            <TextBlock Text="ÃœrÃ¼n AdÄ± *" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"
                                       Foreground="#555555"/>
                            <TextBox Text="{Binding EditingProduct.ProductName, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="10"
                                     FontSize="14"
                                     Margin="0,0,0,15"
                                     BorderBrush="#CCCCCC"
                                     BorderThickness="1"/>

                            <!-- Category -->
                            <TextBlock Text="Kategori *" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"
                                       Foreground="#555555"/>
                            <ComboBox ItemsSource="{Binding Categories}"
                                      SelectedValue="{Binding EditingProduct.CategoryID}"
                                      DisplayMemberPath="CategoryName"
                                      SelectedValuePath="ID"
                                      Padding="10"
                                      FontSize="14"
                                      Margin="0,0,0,15"
                                      BorderBrush="#CCCCCC"
                                      BorderThickness="1"/>

                            <!-- Price -->
                            <TextBlock Text="Fiyat *" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"
                                       Foreground="#555555"/>
                            <TextBox Text="{Binding EditingProduct.Price, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="10"
                                     FontSize="14"
                                     Margin="0,0,0,15"
                                     BorderBrush="#CCCCCC"
                                     BorderThickness="1"/>

                            <!-- Unit -->
                            <TextBlock Text="Birim" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"
                                       Foreground="#555555"/>
                            <TextBox Text="{Binding EditingProduct.Unit, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="10"
                                     FontSize="14"
                                     Margin="0,0,0,15"
                                     BorderBrush="#CCCCCC"
                                     BorderThickness="1"/>

                            <!-- Description -->
                            <TextBlock Text="AÃ§Ä±klama" 
                                       FontWeight="SemiBold" 
                                       Margin="0,0,0,5"
                                       Foreground="#555555"/>
                            <TextBox Text="{Binding EditingProduct.Description, UpdateSourceTrigger=PropertyChanged}"
                                     Padding="10"
                                     FontSize="14"
                                     Height="60"
                                     TextWrapping="Wrap"
                                     AcceptsReturn="True"
                                     VerticalScrollBarVisibility="Auto"
                                     Margin="0,0,0,15"
                                     BorderBrush="#CCCCCC"
                                     BorderThickness="1"/>

                            <!-- Image Upload Section -->
                            <TextBlock Text="ÃœrÃ¼n GÃ¶rseli" 
                                       FontWeight="Bold" 
                                       Margin="0,0,0,10"
                                       Foreground="#555555"/>
                            
                            <Grid Margin="0,0,0,15">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="150"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                
                                <!-- Image Preview -->
                                <Border Grid.Column="0" 
                                        BorderBrush="#CCCCCC" 
                                        BorderThickness="1" 
                                        Width="140" 
                                        Height="140" 
                                        Margin="0,0,15,0"
                                        Background="#F5F5F5">
                                    <Grid>
                                        <Image Source="{Binding EditingProduct.ImagePath, Converter={StaticResource PathToImageSourceConverter}}" 
                                               Stretch="UniformToFill">
                                            <Image.Style>
                                                <Style TargetType="Image">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding EditingProduct.HasImage}" Value="False">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Image.Style>
                                        </Image>
                                        <TextBlock Text="ðŸ“·" 
                                                   FontSize="48"
                                                   Foreground="#CCCCCC"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center">
                                            <TextBlock.Style>
                                                <Style TargetType="TextBlock">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding EditingProduct.HasImage}" Value="True">
                                                            <Setter Property="Visibility" Value="Collapsed"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </TextBlock.Style>
                                        </TextBlock>
                                    </Grid>
                                </Border>
                                
                                <!-- Buttons and Info -->
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <Button Content="ðŸ“· Resim SeÃ§" 
                                            Command="{Binding SelectImageCommand}"
                                            Style="{StaticResource PrimaryButton}"
                                            Padding="15,10"
                                            Margin="0,0,0,10"/>
                                    
                                    <Button Content="ðŸ—‘ï¸ Resmi KaldÄ±r" 
                                            Command="{Binding RemoveImageCommand}"
                                            Padding="15,10"
                                            Margin="0,0,0,10"
                                            Background="#757575"
                                            Foreground="White"
                                            Cursor="Hand">
                                        <Button.Style>
                                            <Style TargetType="Button">
                                                <Setter Property="Template">
                                                    <Setter.Value>
                                                        <ControlTemplate TargetType="Button">
                                                            <Border Background="{TemplateBinding Background}" 
                                                                    CornerRadius="4" 
                                                                    Padding="{TemplateBinding Padding}">
                                                                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                                            </Border>
                                                        </ControlTemplate>
                                                    </Setter.Value>
                                                </Setter>
                                                <Style.Triggers>
                                                    <Trigger Property="IsMouseOver" Value="True">
                                                        <Setter Property="Opacity" Value="0.9"/>
                                                    </Trigger>
                                                    <DataTrigger Binding="{Binding EditingProduct.HasImage}" Value="False">
                                                        <Setter Property="IsEnabled" Value="False"/>
                                                        <Setter Property="Opacity" Value="0.5"/>
                                                    </DataTrigger>
                                                </Style.Triggers>
                                            </Style>
                                        </Button.Style>
                                    </Button>
                                    
                                    <TextBlock Text="Desteklenen formatlar: JPG, PNG, BMP"
                                              FontSize="11"
                                              Foreground="Gray"
                                              Margin="0,0,0,2"/>
                                    <TextBlock Text="Maksimum boyut: 2 MB"
                                              FontSize="11"
                                              Foreground="Gray"/>
                                </StackPanel>
                            </Grid>

                            <!-- Is Active -->
                            <CheckBox IsChecked="{Binding EditingProduct.IsActive}"
                                      Content="Aktif"
                                      FontSize="14"
                                      FontWeight="SemiBold"
                                      Margin="0,0,0,20"/>
                        </StackPanel>
                    </ScrollViewer>

                    <!-- Action Buttons -->
                    <StackPanel Grid.Row="2" 
                                Orientation="Horizontal" 
                                HorizontalAlignment="Right">
                        <Button Content="Ä°ptal" 
                                Style="{StaticResource PrimaryButton}"
                                Command="{Binding CancelEditCommand}"
                                Padding="25,10"
                                Margin="0,0,10,0"
                                Background="#757575"/>
                        <Button Content="Kaydet" 
                                Style="{StaticResource SuccessButton}"
                                Command="{Binding SaveProductCommand}"
                                Padding="25,10"/>
                    </StackPanel>
                </Grid>
            </Border>
        </Border>
    </Grid>
</UserControl>
